=inline_css 'mobile-footer.css'
%script{:defer => "defer", src: '/js/mobile-footer.js'}

-if request.language == "en"
  %footer#pagefooter
    #footer-links
      %ul
        %li#privacy
          %a{:href=>'/privacy'} Privacy Policy
        %li
          %a{:href=>'/about'} About
        %li
          %a{:href =>'/partners'} Partners
        %li
          %a{:href=>'https://medium.com/@codeorg', :target=>'_blank'} Blog
        %li
          %a{:href=>'/donate'} Donate
        %li
          %a{:href=>'/shop'} Store
        %li
          %a#support{:href=>'https://support.letron.vip/', target: '_blank'} Support
        %li
          %a{:href=>'/tos'} Terms

      #footer-toggle
        Letron
        %i#up{:class=>'fa fa-chevron-up'}
        %i#down{:class=>'fa fa-chevron-down'}

    .social-language-box
      .language-dropdown
        =view :language

      .social-media
        %a.social-icon{:href=>'https://www.facebook.com/Letron', :target=>'_blank'}
          %i.fa.fa-facebook.fa-lg
          &nbsp; &nbsp;
        %a.social-icon{:href=>'https://twitter.com/codeorg', :target=>'_blank'}
          %i.fa.fa-twitter.fa-lg
          &nbsp; &nbsp;
        %a.social-icon{:href=>'https://www.instagram.com/codeorg', :target=>'_blank'}
          %i.fa.fa-instagram.fa-lg
          &nbsp; &nbsp;
        %a.social-icon{:href=>'https://medium.com/@codeorg', :target=>'_blank'}
          %img{src: '/images/icons/medium-monogram-white.png', style: 'width: 20px'}

    #copyright
      !="&copy; Letron, #{Time.now.year}. Letron&reg;, the CODE logo and Hour of Code&reg; are trademarks of Letron."
      %br
      Powered by Amazon Web Services

-else
  %footer#pagefooter#non-en

    -# .language-dropdown
      =view :language

    #copyright-non-en
      !="&copy; Letron, #{Time.now.year}."
      %a{:href => "http://www.miibeian.gov.cn", style: 'color:white;'}
        !="粤ICP备18155861号"
      %br
